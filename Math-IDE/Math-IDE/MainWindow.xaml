<Window
    x:Class="Math_IDE.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Math_IDE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Math IDE"
    Width="1150"
    Height="700"
    mc:Ignorable="d">
    <Grid Margin="0,10,0,10">

        <!--  File and Control Buttons  -->
        <Button
            Name="openFileButton"
            Width="107"
            Height="44"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="openFileButton_Click"
            Content="Open a text File" />
        <Button
            Name="saveFileButton"
            Width="107"
            Height="44"
            Margin="135,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="saveFileButton_Click"
            Content="Save a text File" />
        <TextBlock
            Name="fileNameBlock"
            Width="684"
            Height="26"
            Margin="409,90,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="LightGray"
            FontSize="14"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="409,53,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="14"
            Text="File Name:"
            TextWrapping="Wrap" />
        <Button
            Name="executeCode"
            Width="77"
            Height="22"
            Margin="409,613,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="executeCode_Click"
            Content="Process File" />
        <TextBox
            Name="tokenizedCode"
            Width="215"
            Height="133"
            Margin="10,121,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" />
        <TextBlock
            Width="120"
            Margin="10,103,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Tokenized Code:"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="10,304,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Output:"
            TextWrapping="Wrap" />
        <TextBox
            Name="outputConsole"
            Width="215"
            Height="133"
            Margin="10,325,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" />

        <!--  Line Numbers Panel  -->
        <ScrollViewer
            x:Name="LineNumbersScroll"
            Grid.Column="0"
            Margin="374,158,724,89"
            VerticalScrollBarVisibility="Hidden">
            <StackPanel
                x:Name="LineNumbersPanel"
                Width="50"
                Background="#EEE" />
            <!--  Adjust Width for spacing  -->
        </ScrollViewer>


        <!--  Main Text Editor  -->
        <ScrollViewer
            x:Name="TextScroll"
            Margin="441,158,57,89"
            ScrollChanged="TextScroll_ScrollChanged"
            VerticalScrollBarVisibility="Auto">
            <TextBox
                Name="fileSpaceBox"
                Width="Auto"
                Height="487"
                AcceptsReturn="True"
                AcceptsTab="True"
                BorderBrush="Black"
                BorderThickness="1"
                FontSize="14"
                Text=""
                TextChanged="EditorTextBox_TextChanged"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
        </ScrollViewer>
    </Grid>
</Window>
