<Window x:Class="Math_IDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Math_IDE"
        mc:Ignorable="d"
        Title="Math IDE" Height="700" Width="1150">
    <Grid Margin="10">
        <Button Name="openFileButton" Click="openFileButton_Click" Content="Open a text File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="44" Width="107"/>
        <Button Name="saveFileButton" Click="saveFileButton_Click" Content="Save a text File" HorizontalAlignment="Left" Margin="135,10,0,0" VerticalAlignment="Top" Height="44" Width="107"/>
        <TextBlock Name="fileNameBlock" Background="LightGray" FontSize="14" ScrollViewer.HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Left" 
                   Margin="409,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" Width="684"/>
        <TextBlock HorizontalAlignment="Left" FontSize="14" Margin="409,53,0,0" TextWrapping="Wrap" Text="File Name:" VerticalAlignment="Top"/>
        <Button Name="executeCode" Click="executeCode_Click" Content="Process File" HorizontalAlignment="Left" Margin="409,613,0,0" VerticalAlignment="Top" Height="22" Width="77"/>
        <TextBox Name="tokenizedCode" HorizontalAlignment="Left" Margin="10,121,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="215" Height="133"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,103,0,0" TextWrapping="Wrap" Text="Tokenized Code:" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,304,0,0" TextWrapping="Wrap" Text="Output:" VerticalAlignment="Top" RenderTransformOrigin="-0.458,0.373"/>
        <TextBox Name="outputConsole" HorizontalAlignment="Left" Margin="10,325,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="215" Height="133"/>
        <ScrollViewer x:Name="TextScroll" Grid.Column="1" VerticalScrollBarVisibility="Auto" ScrollChanged="TextScroll_ScrollChanged">
            <TextBox Name="fileSpaceBox" BorderBrush="Black" BorderThickness="1" VerticalScrollBarVisibility="Auto" FontSize="14"  
                         HorizontalAlignment="Left" Margin="409,121,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="684" Height="487"
                         AcceptsReturn="True" AcceptsTab="True" TextChanged="EditorTextBox_TextChanged"/>
        </ScrollViewer>

        <ScrollViewer x:Name="LineNumbersScroll" VerticalScrollBarVisibility="Hidden">
            <StackPanel x:Name="LineNumbersPanel" Background="#EEE" Height="487" Width="96" RenderTransformOrigin="0.5,0.5" >
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="-205" Y="30"/>
                    </TransformGroup>
                </StackPanel.RenderTransform>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
